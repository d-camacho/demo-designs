---

location_types:
  - "!create_or_update:name": "Region"
    nestable: true
    "!ref": "region_type"
    children:
      - "!create_or_update:name": "Country"
        nestable: true
        "!ref": "country_type"

locations:
  - "!create_or_update:name": "{{ region_name }}"
    location_type: "!ref:region_type"
    status__name: "Active"
    prefixes:
      - "!create_or_update:prefix": "{{ region_prefix }}"
        type: "container"
        status__name: "Active"
        "!ref": "region_prefix"
    "!ref": "region_location"