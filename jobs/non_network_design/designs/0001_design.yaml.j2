    color: "c0ffee"
  - name: "Security Camera"
    color: "0099ff"

contacts:
  - name: "Jane Doe"
    phone: "+1-800-123-4567"
    email: "jane.doe@example.com"
    role: "Facilities Manager"

config_contexts:
  - name: "Staging Default Settings"
    is_active: true
    data:
      timezone: "UTC"
      backup: true
    locations:
      - "{{ site_name }}"

tags:
  - name: "VM"
  - name: "AppServer"

virtual_machines:
